{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "00 - Print Markdown",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/command.js",
      "args": ["--cli-markdown"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "00 - Print Help",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/command.js",
      "args": ["--help"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "01 - Single Host",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/command.js",
      "args": [
        "--host",
        "http://localhost:3001"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "02 - Multiple Hosts",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/command.js",
      "args": [
        "--host",
        "http://localhost:3001",
        "--host",
        "http://localhost:3002",
        "--host",
        "http://localhost:3003",
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "03 - Custom Path",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/command.js",
      "args": [
        "--host",
        "http://localhost:3001",
        "--host",
        "http://localhost:3002",
        "--host",
        "http://localhost:3003",
        "--path",
        "${workspaceFolder}/test-output"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "04 - Custom Names",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/command.js",
      "args": [
        "--host",
        "http://localhost:3001",
        "--name",
        "mailboxes",
        "--host",
        "http://localhost:3002",
        "--name",
        "processing",
        "--host",
        "http://localhost:3003",
        "--name",
        "storage-mobile",
        "--path",
        "${workspaceFolder}/test-output"
      ]
    },
  ]
}
