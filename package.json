{
  "name"        : "restutils-client",
  "version"     : "0.0.0",
  "description" : "Generate local client library for the RESTUtils Host",
  "main"        : "src/index.js",
  "preferGlobal": true,
  "bin"         : {
    "restutils-client": "./src/command.js"
  },
  "scripts": {
    "lint"        : "eslint ./src",
    "lint:fix"    : "eslint ./src --fix src/**/*.js",
    "markdown"    : "node ./src/command.js --markdown",
    "markdown:cli": "node ./src/command.js --markdown-cli"
  },
  "repository": {
    "type": "git",
    "url" : "git+https://github.com/restutils/restutils-client.git"
  },
  "keywords": [
    "api",
    "generator",
    "instant",
    "expressjs",
    "express",
    "rest",
    "utils",
    "restutils"
  ],
  "author": {
    "name" : "Fred Lackey",
    "email": "fred.lackey@gmail.com",
    "url"  : "http://www.fredlackey.com"
  },
  "license": "Apache-2.0",
  "bugs"   : {
    "url": "https://github.com/restutils/restutils-client/issues"
  },
  "homepage"       : "https://github.com/restutils/restutils-client#readme",
  "devDependencies": {
    "eslint"                   : "^8.26.0",
    "eslint-config-airbnb"     : "^19.0.4",
    "eslint-config-standard"   : "^17.0.0",
    "eslint-plugin-import"     : "^2.26.0",
    "eslint-plugin-jsx-a11y"   : "^6.6.1",
    "eslint-plugin-node"       : "^11.1.0",
    "eslint-plugin-promise"    : "^6.1.1",
    "eslint-plugin-react"      : "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-standard"   : "^4.1.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.7",
    "rimraf"    : "^3.0.2",
    "yargs"     : "^17.6.0"
  }
}
